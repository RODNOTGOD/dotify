<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/music_prev_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_button"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/music_prev_background"/>

        <ImageButton
            android:id="@+id/music_play_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_button"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/music_pause_background"
            android:contentDescription="@string/play_button_description" />

        <ImageButton
            android:id="@+id/music_next_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/music_next_background"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>